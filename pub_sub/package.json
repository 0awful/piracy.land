{
  "name": "@piracy-land/pubsub-service",
  "version": "0.1.0",
  "description": "Core pub/sub service microfrontend for piracy.land",
  "license": "GPL-3.0-or-later",
  "main": "dist/index.js",
  "files": [
    "dist",
    "index.html",
    "treatise.json"
  ],
  "scripts": {
    "build": "esbuild src/index.js --bundle --outfile=dist/index.js --format=esm --platform=browser",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@piracy-land/events": "^0.1.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": ["<rootDir>/src/**/*.test.js"],
    "collectCoverageFrom": ["<rootDir>/src/**/*.js", "!**/*.test.js"]
  }
}
